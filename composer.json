{
    "name": "mdwikicx/new_html",
    "description": "MediaWiki content transformation and API services",
    "type": "project",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "FixRefs\\Tests\\": "tests/",
            "MDWiki\\NewHtml\\Application\\Controllers\\": "src/Application/Controllers/",
            "MDWiki\\NewHtml\\Application\\Handlers\\": "src/Application/Handlers/",
            "MDWiki\\NewHtml\\Services\\Api\\": "src/Services/Api/",
            "MDWiki\\NewHtml\\Services\\Html\\": "src/Services/Html/",
            "MDWiki\\NewHtml\\Services\\Wikitext\\": "src/Services/Wikitext/",
            "MDWiki\\NewHtml\\Domain\\Parser\\": "src/Domain/Parser/",
            "MDWiki\\NewHtml\\Domain\\Fixes\\References\\": "src/Domain/Fixes/References/",
            "MDWiki\\NewHtml\\Domain\\Fixes\\Templates\\": "src/Domain/Fixes/Templates/",
            "MDWiki\\NewHtml\\Domain\\Fixes\\Media\\": "src/Domain/Fixes/Media/",
            "MDWiki\\NewHtml\\Domain\\Fixes\\Structure\\": "src/Domain/Fixes/Structure/",
            "MDWiki\\NewHtml\\Infrastructure\\Utils\\": "src/Infrastructure/Utils/",
            "MDWiki\\NewHtml\\Infrastructure\\Storage\\": "src/Infrastructure/Storage/",
            "MDWiki\\NewHtml\\Infrastructure\\Debug\\": "src/Infrastructure/Debug/"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests --testdox --colors=always -c phpunit.xml",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=256M"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
