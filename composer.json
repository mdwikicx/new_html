{
    "name": "mdwikicx/new_html",
    "description": "MediaWiki content transformation and API services",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "MDWiki\\NewHtml\\": "src/",
            "MDWiki\\NewHtml\\Application\\Controllers\\": "src/Application/Controllers/",
            "MDWiki\\NewHtml\\Application\\": "src/Application/",
            "MDWiki\\NewHtml\\Domain\\": "src/Domain/",
            "MDWiki\\NewHtml\\Infrastructure\\": "src/Infrastructure/",
            "MDWiki\\NewHtml\\Infrastructure\\Utils\\": "src/Infrastructure/Utils/",
            "MDWiki\\NewHtml\\Infrastructure\\Debug\\": "src/Infrastructure/Debug/",
            "MDWiki\\NewHtml\\Services\\": "src/Services/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FixRefs\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests --testdox --colors=always -c phpunit.xml",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=256M"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
