{
    "name": "mdwikicx/new_html",
    "description": "MediaWiki content transformation and API services",
    "type": "project",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "FixRefs\\Tests\\": "tests/",
            "MDWiki\\NewHtml\\Application\\": "src/Application/",
            "MDWiki\\NewHtml\\Services\\": "src/Services/",
            "MDWiki\\NewHtml\\Domain\\": "src/Domain/",
            "MDWiki\\NewHtml\\Infrastructure\\": "src/Infrastructure/",
            "APIServices\\": "src/new_html_src/api_services/",
            "HtmlServices\\": "src/new_html_src/html_services/",
            "Utils\\": "src/new_html_src/utils/",
            "WikiParse\\": "src/new_html_src/WikiParse/",
            "WikiTextFixes\\": "src/new_html_src/WikiTextFixes/"
        },
        "files": [
            "src/Infrastructure/Debug/PrintHelper.php",
            "src/Infrastructure/Utils/FileUtils.php",
            "src/Infrastructure/Utils/HtmlUtils.php",
            "src/Domain/Parser/CategoryParser.php",
            "src/Domain/Parser/CitationsParser.php",
            "src/Domain/Parser/LeadSectionParser.php",
            "src/Domain/Parser/TemplateParser.php",
            "src/new_html_src/require.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests --testdox --colors=always -c phpunit.xml",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=256M"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
